<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>

		<!-- Connection properties -->
		<property name="dialect">org.hibernate.dialect.SQLiteDialect</property>
		<property name="connection.driver_class">org.sqlite.JDBC</property>
		<property name="connection.url">jdbc:sqlite:application.db</property>
		<!-- <property name="connection.datasource">mydatasource</property> -->

		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">
			org.hibernate.cache.NoCacheProvider
		</property>

		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">true</property>

		<property name="hibernate.query.factory_class">
			org.hibernate.hql.classic.ClassicQueryTranslatorFactory
		</property>

		<property name="current_session_context_class">jta</property>

		<property name="hibernate.transaction.factory_class">
			org.hibernate.transaction.JTATransactionFactory
		</property>

		<property name="hibernate.transaction.transaction.jta.platform">
			org.hibernate.service.jta.platform.internal.WeblogicJtaPlatform
		</property>

		<property name="hibernate.transaction.manager_lookup_class">
			org.hibernate.transaction.WeblogicTransactionManagerLookup
		</property>

		<property name="hibernate.jdbc.use_scrollable_resultset">
			true
		</property>
		<!-- property name="hibernate.session_factory_name">java:hibernate/SessionFactory</property -->

		<!-- If your dba allows that, use CREATE the first time in order to create 
			all tables. This won't populate tables. With SQLite, creating indexes has issues. -->
		<property name="hibernate.hbm2ddl.auto"></property>

		<mapping class="com.example.myapp.authorization.db.AuthUser" />
		<mapping class="com.example.myapp.authorization.db.Role" />
		<mapping class="com.example.myapp.authorization.db.Page" />

	</session-factory>
</hibernate-configuration>