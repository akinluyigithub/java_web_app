<!-- This file is not always needed. -->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

<!-- 
	<error-page>
		<location>/general-error.html</location>
	</error-page>
	 -->
	<error-page>
		<!-- Forbidden directory listing -->
		<error-code>403</error-code>
		<location>/ui/page_403.jsp</location>
	</error-page>
	<error-page>
		<!-- Missing resource -->
		<error-code>404</error-code>
		<location>/ui/page_404.jsp</location>
	</error-page>
	<error-page>
		<!-- Uncaught exception -->
		<error-code>500</error-code>
		<location>/ui/page_500.jsp</location>
	</error-page>
	
	<!-- Glassfish does not support json by default. Other webservers may do. -->
    <mime-mapping>
        <extension>json</extension>
        <mime-type>application/json</mime-type>
    </mime-mapping>
    
    <!--
    I don't think users should be managed by container. I can be wrong of course. 
    <login-config>
    	<auth-method>FORM</auth-method>
		<realm-name>file-realm</realm-name>
		<form-login-config>
			<form-login-page>/ui/login2.jsp</form-login-page>
			<form-error-page>/ui/login2.jsp</form-error-page>   
		</form-login-config>
	</login-config>
	-->

</web-app>